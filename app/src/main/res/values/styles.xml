<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomDatePickerDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorPrimary">@color/cafe_oscuro</item> <!-- Color de la cabecera del diálogo -->
        <item name="colorOnPrimary">@color/blanco</item> <!-- Color del texto en la cabecera -->
        <item name="colorAccent">@color/cafe_oscuro</item>
    </style>


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Otros atributos de estilo aquí -->
        <item name="android:statusBarColor">@color/cafe_oscuro</item>
    </style>

    <style name="TransparentImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">0dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

</resources>