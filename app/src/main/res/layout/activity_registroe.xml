<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registroe"
    tools:context=".RegistroeActivity">

    <ScrollView
        android:layout_width="312dp"
        android:layout_height="453dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:background="@color/amarillo"
        android:scrollbarThumbVertical="@drawable/custom_scrollbar_thumb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.44">


        <LinearLayout
            android:layout_width="312dp"
            android:layout_height="453dp"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:backgroundTint="@color/amarillo"
                android:fontFamily="casual"
                android:padding="8dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/blanco"
                android:textSize="2sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imagperfile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/usuarion"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.264" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:backgroundTint="@color/amarillo"
                android:fontFamily="casual"
                android:padding="8dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/blanco"
                android:textSize="2sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/txt_nombreE"
                android:layout_width="287dp"
                android:layout_height="50dp"
                android:background="@drawable/bordertxt"
                android:ems="10"
                android:fontFamily="casual"
                android:hint="@string/txt_nombree"
                android:textAlignment="center"
                android:textColor="@color/naranja"
                android:textColorHighlight="@color/naranja"
                android:textColorHint="@color/naranja"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.286" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:backgroundTint="@color/amarillo"
                android:fontFamily="casual"
                android:padding="8dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/blanco"
                android:textSize="2sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txt_nit"
                android:layout_width="287dp"
                android:layout_height="50dp"
                android:background="@drawable/bordertxt"
                android:ems="10"
                android:fontFamily="casual"
                android:hint="@string/txt_nit"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="@color/naranja"
                android:textColorHighlight="@color/naranja"
                android:textColorHint="@color/naranja"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.375" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:backgroundTint="@color/amarillo"
                android:fontFamily="casual"
                android:padding="8dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/blanco"
                android:textSize="2sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/txt_correoe"
                android:layout_width="287dp"
                android:layout_height="50dp"
                android:background="@drawable/bordertxt"
                android:ems="10"
                android:fontFamily="casual"
                android:hint="@string/txt_correoe"
                android:inputType="textEmailAddress"
                android:textAlignment="center"
                android:textColor="@color/naranja"
                android:textColorHighlight="@color/naranja"
                android:textColorHint="@color/naranja"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.469" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:backgroundTint="@color/amarillo"
                android:fontFamily="casual"
                android:padding="8dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/blanco"
                android:textSize="2sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/txt_contraseñae"
                android:layout_width="287dp"
                android:layout_height="50dp"
                android:background="@drawable/bordertxt"
                android:ems="10"
                android:fontFamily="casual"
                android:hint="@string/txt_contrasena"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:textColor="@color/naranja"
                android:textColorHighlight="@color/naranja"
                android:textColorHint="@color/naranja"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.565" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:backgroundTint="@color/amarillo"
                android:fontFamily="casual"
                android:padding="8dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/blanco"
                android:textSize="2sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/txt_contraseñauRe"
                android:layout_width="287dp"
                android:layout_height="50dp"
                android:background="@drawable/bordertxt"
                android:ems="10"
                android:fontFamily="casual"
                android:hint="@string/txt_Rcontraseña"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:textColor="@color/naranja"
                android:textColorHighlight="@color/naranja"
                android:textColorHint="@color/naranja"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.657" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:backgroundTint="@color/amarillo"
                android:fontFamily="casual"
                android:padding="8dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/blanco"
                android:textSize="2sp"
                android:textStyle="bold" />




        </LinearLayout>
    </ScrollView>


    <Button
        android:id="@+id/btn_registrare"
        android:layout_width="188dp"
        android:layout_height="52dp"
        android:backgroundTint="@color/naranja"
        android:fontFamily="casual"
        android:hint="@string/btn_registrar"
        android:textColor="@color/blanco"
        android:textColorHighlight="@color/blanco"
        android:textColorHint="@color/blanco"
        android:textColorLink="@color/blanco"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.905" />

    <Button
        android:id="@+id/btncuentae"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="@string/btn_cuentaya"
        android:textColor="@color/blanco"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>